{
  "name": "next-template",
  "version": "0.1.2",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build --turbopack",
    "start": "next start",
    "lint": "next lint",
    "lint-staged": "lint-staged",
    "type-check": "tsc --noEmit",
    "prepare": "husky",
    "audit": "pnpm audit",
    "audit:ci": "npx audit-ci --config audit-ci.json",
    "audit:fix": "pnpm audit --audit-level=moderate",
    "check:workflows": "node scripts/check-workflows.js",
    "test:workflows": "node scripts/test-commands.js",
    "release": "standard-version"
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.14",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.24",
    "luxon": "^3.7.2",
    "next": "15.5.4",
    "next-themes": "^0.4.6",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "standard-version": "^9.5.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.14"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@types/luxon": "^3.7.1",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "eslint": "^9",
    "eslint-config-next": "15.3.1",
    "eslint-plugin-import": "^2.32.0",
    "husky": "^9.1.7",
    "js-yaml": "^4.1.0",
    "lint-staged": "^15",
    "postcss": "^8.5.6",
    "prettier": "^3",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "typescript": "^5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
